{   
    "/api" : {
    	"method": "get",
        "handler": "handler/handler",
        "handlerMethod": "list"
    },
    "/api/login":{
        "method": "post",
        "handler": "lib/authorization",
        "handlerMethod": "login",
        "validate":[{
            "type": "body",
            "param": "password",
            "validation": ["isString"]
        }]
    },
     "/api/admin/post" : {
    	"method": "post",
        "handler": "handler/handler",
        "handlerMethod": "insert",
        "validate":[{
            "type": "body",
            "param":"name",
            "validation":["isString"]
        },{
            "type": "body",
            "param":"age",
            "validation":["isNumber"]
        },{
            "type": "body",
            "param":"location",
            "validation":["isString"]
        },{
            "type": "body",
            "param":"email",
            "validation":["isValidEmail"]
        }]
    },
    "/api/:id/:name":{
        "method":"get",
        "handler":"handler/handler",
        "handlerMethod": "findOne",
        "validate": [{
            "type": "param",
            "param": "id",
            "validation": ["isNumber"]
        }, {
            "type":"param",
            "param": "name",
            "validation": ["isString"]
        }]
    },
    "/api/:id":{
        "method":"get",
        "handler":"handler/handler",
        "handlerMethod": "findById",
        "validate": [{
            "type":"param",
            "param" : "id",
            "validation": ["isNumber"]
        }]
    },
    "/api/admin/edit/:id":{
        "method": "put",
        "handler": "handler/handler",
        "handlerMethod": "editEntry",
        "validate": [{
            "type": "param",
            "param":"id",
            "validation" :["isNumber"]
        },{
            "type": "body",
            "param":"name",
            "validation":["isString"]
        },{
            "type": "body",
            "param":"age",
            "validation":["isNumber"]
        },{
            "type": "body",
            "param":"location",
            "validation":["isString"]
        },{
            "type": "body",
            "param":"email",
            "validation":["isValidEmail"]
        }]
    }
}